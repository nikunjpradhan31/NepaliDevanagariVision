# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# Model Paths
DETECTION_MODEL_PATH=models/LineDetectionv4.onnx
RECOGNITION_MODEL_PATH=models/ResNetBiLSTMCTCv1.onnx

# Processing Configuration
DETECTION_CONFIDENCE_THRESHOLD=0.5
CROP_PADDING_X=100
CROP_PADDING_Y=15
MAX_FILE_SIZE=10485760  # 10MB
MAX_BATCH_SIZE=20

# Request Timeouts
REALTIME_REQUEST_TIMEOUT=5
BATCH_REQUEST_TIMEOUT=300

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Arq Queue Configuration
ARQ_QUEUE_NAME=ocr_queue
ARQ_MAX_JOBS=100

# Security and Rate Limiting
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Image Processing
ALLOWED_IMAGE_EXTENSIONS=["jpg", "jpeg", "png", "tiff", "tif", "pdf"]
TEMP_DIR=/tmp/ocr_temp
CLEANUP_TEMP_FILES=true

# Device Configuration
PREFERRED_DEVICE=cpu  # cpu, cuda
FORCE_CPU=false

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT=10
MODEL_HEALTH_CHECK_INTERVAL=60

# Development Settings
DEBUG=false
RELOAD=false