# Server Configuration
HOST=0.0.0.0
PORT=10007
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG=False
RELOAD=False

# Model Paths
MODELS_DIR=models

# Detection Model
DETECTION_MODEL_DATA={"model_name":"LineDetectionv4","type":"detection","version":"4.0","model_file":"models/LineDetectionv4.onnx"}

# Recognition Model
RECOGNITION_MODEL_DATA={"model_name":"ResNetBiLSTMCTCv1","type":"recognition","version":"1.0","model_file":"models/ResNetBiLSTMCTCv1.onnx","decoder":"CTC"}

# Processing Configuration
DETECTION_CONFIDENCE_THRESHOLD=0.5
CROP_PADDING_X=100
CROP_PADDING_Y=15
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=20

# Request Timeouts
REALTIME_REQUEST_TIMEOUT=5
BATCH_REQUEST_TIMEOUT=300

# Arq Queue
ARQ_QUEUE_NAME=ocr_queue
ARQ_MAX_JOBS=100

# Security & Rate Limiting
ALLOWED_ORIGINS=["http://localhost:3000"]
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Image Processing
ALLOWED_IMAGE_EXTENSIONS=["jpg","jpeg","png","tiff","tif","pdf"]
TEMP_DIR=/tmp/ocr_temp
CLEANUP_TEMP_FILES=True

# Device Configuration
PREFERRED_DEVICE=cpu
FORCE_CPU=False

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=60

# Model Input Sizes
DETECTION_INPUT_SIZE=[1024,1024]
RECOGNITION_INPUT_SIZE=[1220,80]

# Character Set (Recognition)
RECOGNITION_CHARACTER_SET='०१२३४५६७८९0123456789!"#$%&\'()*+,-./:;<=>?@[\\]^_`{}~।॥—‘’“”… अआइईउऊऋएऐओऔअंअःकखगघङचछजझञटठडढणतथदधनपफबभमयरलवशषसहक्षत्रज्ञािीुूृेैोौंःँॅॉ'
